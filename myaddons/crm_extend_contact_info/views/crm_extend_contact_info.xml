<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- Opportunities Form View -->
    <record model="ir.ui.view" id="crm_case_form_view_extend_info">
      <field name="name">crm.case.form.view.extend.info</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
      <field name="arch" type="xml">
        <xpath expr="//page[@name='lead']/group/group/field[@name='mobile']" position="after">
          <field name="phone_info"/>
          <field name="email_info"/>
        </xpath>
      </field>
    </record>


</odoo>
